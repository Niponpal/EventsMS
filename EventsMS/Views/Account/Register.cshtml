@model EventsMS.Models.Auth.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up - EventsMS</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
          rel="stylesheet">

    <style>
        :root {
            --primary: #0ea5e9;
            --primary-dark: #0284c7;
            --accent: #7c3aed;
            --bg: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
            --card-bg: rgba(255, 255, 255, 0.78);
            --blur: blur(16px);
            --shadow: 0 8px 32px rgba(31, 38, 135, 0.18);
            --text: #0f172a;
            --muted: #64748b;
            --radius: 1.25rem;
        }

        body {
            min-height: 100vh;
            background: var(--bg);
            font-family: system-ui, -apple-system, sans-serif;
            color: var(--text);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
            position: relative;
            overflow: hidden;
        }

            body::before {
                content: '';
                position: absolute;
                inset: 0;
                background: linear-gradient(45deg, rgba(14,165,233,0.04), rgba(124,58,237,0.04));
                animation: gradient 18s ease infinite;
                z-index: -2;
            }

        @@keyframes gradient {
            0%

        {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }

        }

        .particles {
            position: fixed;
            inset: 0;
            pointer-events: none;
            z-index: -1;
        }

        .particle {
            position: absolute;
            background: rgba(14, 165, 233, 0.5);
            border-radius: 50%;
            box-shadow: 0 0 12px rgba(14, 165, 233, 0.7);
            animation: float-up linear infinite;
        }

        @@keyframes float-up {
            0%

        {
            transform: translateY(110vh) scale(0.3);
            opacity: 0;
        }

        10% {
            opacity: 0.7;
        }

        90% {
            opacity: 0.7;
        }

        100% {
            transform: translateY(-15vh) scale(0.9);
            opacity: 0;
        }

        }

        .register-card {
            background: var(--card-bg);
            backdrop-filter: var(--blur);
            -webkit-backdrop-filter: var(--blur);
            border: 1px solid rgba(255,255,255,0.35);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 2.5rem;
            width: 100%;
            max-width: 480px;
            transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

            .register-card:hover {
                transform: translateY(-12px) scale(1.015);
            }

        .header-line {
            height: 4px;
            width: 90px;
            background: linear-gradient(90deg, var(--primary), var(--accent));
            border-radius: 2px;
            margin: 0 auto 1.25rem;
        }

        h2 {
            font-weight: 800;
            font-size: 2.1rem;
            text-align: center;
            margin-bottom: 0.5rem;
            background: linear-gradient(90deg, var(--primary), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .social-proof {
            text-align: center;
            font-size: 0.9rem;
            color: var(--muted);
            margin-bottom: 2rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--text);
            margin-bottom: 0.4rem;
        }

        .form-control {
            background: rgba(255,255,255,0.65);
            border: 1px solid rgba(203,213,225,0.7);
            border-radius: 0.9rem;
            padding: 0.75rem 1.25rem;
            transition: all 0.3s ease;
            box-shadow: inset 0 2px 5px rgba(0,0,0,0.03);
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 0.25rem rgba(14,165,233,0.18);
                background: white;
            }

        .password-toggle {
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--muted);
            cursor: pointer;
            transition: color 0.2s;
        }

            .password-toggle:hover {
                color: var(--primary);
            }

        .strength-meter {
            height: 5px;
            background: #e2e8f0;
            border-radius: 999px;
            overflow: hidden;
            margin: 0.6rem 0 0.3rem;
        }

        .strength-fill {
            height: 100%;
            width: 0%;
            transition: width 0.4s ease, background 0.4s ease;
        }

        .btn-signup {
            background: linear-gradient(135deg, var(--primary), var(--accent));
            border: none;
            font-weight: 700;
            padding: 0.9rem;
            border-radius: 0.9rem;
            color: white;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .btn-signup:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 30px rgba(14,165,233,0.4);
            }

        .trust-badge {
            font-size: 0.85rem;
            color: var(--muted);
            text-align: center;
            margin-top: 1.25rem;
        }

        .login-text {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.95rem;
        }

            .login-text a {
                color: var(--primary);
                font-weight: 600;
                text-decoration: none;
            }

        @@media (max-width: 576px) {
            .register-card

        {
            padding: 2rem 1.5rem;
        }

        h2 {
            font-size: 1.8rem;
        }

        }
    </style>
</head>
<body>

    <!-- Floating particles -->
    <div class="particles">
        <div class="particle" style="left:8%;  width:7px; height:7px; animation-duration:16s; animation-delay:0s;"></div>
        <div class="particle" style="left:22%; width:9px; height:9px; animation-duration:24s; animation-delay:3s;  background:rgba(124,58,237,0.5);"></div>
        <div class="particle" style="left:38%; width:6px; height:6px; animation-duration:19s; animation-delay:1.5s;"></div>
        <div class="particle" style="left:55%; width:8px; height:8px; animation-duration:28s; animation-delay:6s;  background:rgba(124,58,237,0.5);"></div>
        <div class="particle" style="left:68%; width:5px; height:5px; animation-duration:21s; animation-delay:4s;"></div>
        <div class="particle" style="left:85%; width:10px;height:10px; animation-duration:32s; animation-delay:8s;"></div>
        <div class="particle" style="left:15%; width:8px; height:8px; animation-duration:26s; animation-delay:2s;  background:rgba(124,58,237,0.5);"></div>
        <div class="particle" style="left:45%; width:7px; height:7px; animation-duration:18s; animation-delay:5s;"></div>
    </div>

    <div class="register-card">
        <div class="header-line"></div>
        <h2>Join EventsMS</h2>
        <p class="social-proof">5,000+ organizers & attendees already connected</p>

        <form asp-action="Register" method="post" class="needs-validation" novalidate id="registerForm">
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control" placeholder="Your full name" required autofocus />
                <div class="invalid-feedback">
                    Please enter your full name.
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="you@example.com" required />
                <div class="invalid-feedback">
                    Please enter a valid email address.
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="01XXXXXXXXX" pattern="\01[3-9][0-9]{8}" />
                <div class="invalid-feedback">
                    Please enter a valid Bangladeshi phone number (e.g.017XXXXXXXX)
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <input asp-for="Address" class="form-control" placeholder="Your location / city" />
            </div>

            <div class="mb-3 position-relative">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" id="password" minlength="8" required />
                <button type="button" class="password-toggle position-absolute" id="togglePassword">
                    <i class="bi bi-eye"></i>
                </button>
                <div class="strength-meter mt-2">
                    <div class="strength-fill" id="strengthFill"></div>
                </div>
                <div id="strengthText" class="small text-end text-muted mt-1">Password strength</div>
                <div class="invalid-feedback">
                    Password must be at least 8 characters long.
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" id="confirmPassword" required />
                <div id="passwordMatchMessage" class="small mt-1"></div>
                <div class="invalid-feedback">
                    Passwords must match.
                </div>
            </div>

            <div class="form-check mb-4">
                <input class="form-check-input" type="checkbox" value="" id="termsCheck" required>
                <label class="form-check-label small" for="termsCheck">
                    I accept the <a href="#" class="text-decoration-none">Terms</a> & <a href="#" class="text-decoration-none">Privacy Policy</a>
                </label>
                <div class="invalid-feedback">
                    You must agree before submitting.
                </div>
            </div>

            <button class="btn btn-signup w-100" type="submit">
                <i class="bi bi-rocket-takeoff me-2"></i> Create Account
            </button>

            <div class="trust-badge mt-3 text-center">
                <i class="bi bi-lock me-1"></i> Secured with end-to-end encryption
            </div>

            <div class="login-text text-center mt-3">
                Already part of the community? <a asp-controller="Account" asp-action="Login">Sign in</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Bootstrap form validation
        (() => {
            'use strict'
            const form = document.getElementById('registerForm')
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })()

        // Password visibility toggle
        document.getElementById('togglePassword')?.addEventListener('click', () => {
            const pw = document.getElementById('password')
            const icon = document.querySelector('#togglePassword i')
            pw.type = pw.type === 'password' ? 'text' : 'password'
            icon.classList.toggle('bi-eye')
            icon.classList.toggle('bi-eye-slash')
        })

        // Password strength meter
        document.getElementById('password')?.addEventListener('input', e => {
            const v = e.target.value.trim()
            const fill = document.getElementById('strengthFill')
            const txt = document.getElementById('strengthText')
            let s = 0
            if (v.length >= 8) s += 30
            if (/[A-Z]/.test(v)) s += 25
            if (/\d/.test(v)) s += 25
            if (/[^A-Za-z0-9]/.test(v)) s += 20

            fill.style.width = s + '%'

            if (s < 40) {
                fill.style.background = '#ef4444'
                txt.textContent = 'Weak'
            } else if (s < 70) {
                fill.style.background = '#f59e0b'
                txt.textContent = 'Medium'
            } else {
                fill.style.background = '#10b981'
                txt.textContent = 'Strong'
            }
        })

        // Confirm password match check
        const pw = document.getElementById('password')
        const cpw = document.getElementById('confirmPassword')
        const matchMsg = document.getElementById('passwordMatchMessage')

        function checkMatch() {
            if (cpw.value === '') {
                matchMsg.textContent = ''
                cpw.classList.remove('is-valid', 'is-invalid')
                return
            }

            if (pw.value === cpw.value) {
                matchMsg.textContent = 'Passwords match ✓'
                matchMsg.style.color = '#198754'
                cpw.classList.remove('is-invalid')
                cpw.classList.add('is-valid')
            } else {
                matchMsg.textContent = 'Passwords do not match ✗'
                matchMsg.style.color = '#dc3545'
                cpw.classList.remove('is-valid')
                cpw.classList.add('is-invalid')
            }
        }

        pw?.addEventListener('input', checkMatch)
        cpw?.addEventListener('input', checkMatch)
    </script>
</body>
</html>