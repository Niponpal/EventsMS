@model EventsMS.Models.Auth.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In - EventsMS</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
          rel="stylesheet">

    <style>
        :root {
            --primary: #0ea5e9;
            --primary-dark: #0284c7;
            --accent: #7c3aed;
            --bg: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
            --card-bg: rgba(255, 255, 255, 0.78);
            --blur: blur(16px);
            --shadow: 0 8px 32px rgba(31, 38, 135, 0.18);
            --text: #0f172a;
            --muted: #64748b;
            --radius: 1.25rem;
        }

        body {
            min-height: 100vh;
            background: var(--bg);
            font-family: system-ui, -apple-system, sans-serif;
            color: var(--text);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
            position: relative;
            overflow: hidden;
        }

        body::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(45deg, rgba(14,165,233,0.04), rgba(124,58,237,0.04));
            animation: gradient 18s ease infinite;
            z-index: -2;
        }

        @@keyframes gradient {
            0%   { background-position: 0% 50%; }
            50%  { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .particles {
            position: fixed;
            inset: 0;
            pointer-events: none;
            z-index: -1;
        }

        .particle {
            position: absolute;
            background: rgba(14, 165, 233, 0.5);
            border-radius: 50%;
            box-shadow: 0 0 12px rgba(14, 165, 233, 0.7);
            animation: float-up linear infinite;
        }

        @@keyframes float-up {
            0%   { transform: translateY(110vh) scale(0.3); opacity: 0; }
            10%  { opacity: 0.7; }
            90%  { opacity: 0.7; }
            100% { transform: translateY(-15vh) scale(0.9); opacity: 0; }
        }

        .login-card {
            background: var(--card-bg);
            backdrop-filter: var(--blur);
            -webkit-backdrop-filter: var(--blur);
            border: 1px solid rgba(255,255,255,0.35);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 2.5rem;
            width: 100%;
            max-width: 460px;
            transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        .login-card:hover {
            transform: translateY(-12px) scale(1.015);
        }

        .header-line {
            height: 4px;
            width: 80px;
            background: linear-gradient(90deg, var(--primary), var(--accent));
            border-radius: 2px;
            margin: 0 auto 1.25rem;
        }

        h2 {
            font-weight: 800;
            font-size: 2.1rem;
            text-align: center;
            margin-bottom: 0.5rem;
            background: linear-gradient(90deg, var(--primary), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .login-subtitle {
            text-align: center;
            color: var(--muted);
            font-size: 1rem;
            margin-bottom: 2rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--text);
            margin-bottom: 0.4rem;
        }

        .form-control {
            background: rgba(255,255,255,0.65);
            border: 1px solid rgba(203,213,225,0.7);
            border-radius: 0.9rem;
            padding: 0.75rem 1.25rem;
            transition: all 0.3s ease;
            box-shadow: inset 0 2px 5px rgba(0,0,0,0.03);
        }

        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.25rem rgba(14,165,233,0.18);
            background: white;
        }

        .password-toggle {
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--muted);
            cursor: pointer;
            transition: color 0.2s;
        }

        .password-toggle:hover {
            color: var(--primary);
        }

        .btn-login {
            background: linear-gradient(135deg, var(--primary), var(--accent));
            border: none;
            font-weight: 700;
            padding: 0.9rem;
            border-radius: 0.9rem;
            color: white;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            width: 100%;
        }

        .btn-login:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(14,165,233,0.4);
        }

        .btn-login::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.35) 10%, transparent 40%);
            opacity: 0;
            transition: opacity 0.6s;
        }

        .btn-login:active::after {
            opacity: 1;
        }

        .forgot-password {
            color: var(--primary);
            font-size: 0.9rem;
            text-decoration: none;
            display: block;
            text-align: right;
            margin-bottom: 1.5rem;
        }

        .forgot-password:hover {
            text-decoration: underline;
        }

        .social-login {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin: 1.5rem 0;
        }

        .btn-social {
            background: rgba(255,255,255,0.5);
            border: 1px solid rgba(203,213,225,0.7);
            border-radius: 0.9rem;
            padding: 0.75rem;
            font-weight: 600;
            color: var(--text);
            transition: all 0.3s ease;
        }

        .btn-social:hover {
            background: rgba(255,255,255,0.8);
            border-color: var(--primary);
            transform: translateY(-2px);
        }

        .register-link {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.95rem;
            color: var(--muted);
        }

        .register-link a {
            color: var(--primary);
            font-weight: 600;
            text-decoration: none;
        }

        .register-link a:hover {
            text-decoration: underline;
        }

        @@media (max-width: 576px) {
            .login-card { padding: 2rem 1.5rem; }
            h2 { font-size: 1.8rem; }
        }
    </style>
</head>
<body>

    <!-- Floating particles background -->
    <div class="particles">
        <div class="particle" style="left:8%; width:7px; height:7px; animation-duration:16s; animation-delay:0s;"></div>
        <div class="particle" style="left:22%; width:9px; height:9px; animation-duration:24s; animation-delay:3s; background:rgba(124,58,237,0.5);"></div>
        <div class="particle" style="left:38%; width:6px; height:6px; animation-duration:19s; animation-delay:1.5s;"></div>
        <div class="particle" style="left:55%; width:8px; height:8px; animation-duration:28s; animation-delay:6s; background:rgba(124,58,237,0.5);"></div>
        <div class="particle" style="left:68%; width:5px; height:5px; animation-duration:21s; animation-delay:4s;"></div>
        <div class="particle" style="left:85%; width:10px; height:10px; animation-duration:32s; animation-delay:8s;"></div>
        <div class="particle" style="left:15%; width:8px; height:8px; animation-duration:26s; animation-delay:2s; background:rgba(124,58,237,0.5);"></div>
        <div class="particle" style="left:45%; width:7px; height:7px; animation-duration:18s; animation-delay:5s;"></div>
    </div>

    <div class="login-card">
        <div class="header-line"></div>
        <h2>Welcome Back</h2>
        <p class="login-subtitle">Sign in to continue your EventsMS journey</p>

        <form asp-action="Login" method="post" class="needs-validation" novalidate id="loginForm">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email or Username</label>
                <input asp-for="Email" class="form-control" placeholder="you@example.com or username" required autofocus />
                <div class="invalid-feedback">
                    Please enter your email or username.
                </div>
            </div>

            <div class="mb-4 position-relative">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" id="password" required />
                <button type="button" class="password-toggle position-absolute" id="togglePassword">
                    <i class="bi bi-eye"></i>
                </button>
                <div class="invalid-feedback">
                    Please enter your password.
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                    <label class="form-check-label small" for="rememberMe">Remember me</label>
                </div>
                <a href="#" class="forgot-password">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-login">
                <i class="bi bi-box-arrow-in-right me-2"></i> Sign In
            </button>

            <div class="divider my-4">
                <span>Or continue with</span>
            </div>

            <div class="social-login">
                <button type="button" class="btn-social">
                    <i class="bi bi-google"></i> Google
                </button>
                <button type="button" class="btn-social">
                    <i class="bi bi-facebook"></i> Facebook
                </button>
            </div>

            <div class="register-link">
                Don't have an account? <a asp-controller="Account" asp-action="Register">Create one now</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Password visibility toggle
        document.getElementById('togglePassword')?.addEventListener('click', () => {
            const pw = document.getElementById('password');
            const icon = document.querySelector('#togglePassword i');
            pw.type = pw.type === 'password' ? 'text' : 'password';
            icon.classList.toggle('bi-eye');
            icon.classList.toggle('bi-eye-slash');
        });

        // Bootstrap form validation
        (() => {
            'use strict';
            const form = document.getElementById('loginForm');
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        })();
    </script>
</body>
</html>