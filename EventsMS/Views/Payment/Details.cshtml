@model EventsMS.Models.Payment

@{
    ViewData["Title"] = "Payment Details";
}

<!-- Header Section -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold mb-0">Payment Details</h2>
    <div class="d-flex gap-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning rounded-pill px-4">
            <i class="bi bi-pencil me-1"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>
</div>

<!-- Main Details Card -->
<div class="recent-reg-table mb-5">
    <h5 class="fw-semibold mb-3 px-4 pt-4">
        <i class="bi bi-receipt-check me-2 text-primary"></i>
        Transaction #@Model.InvoiceNumber
    </h5>

    <div class="px-4 pb-4">
        <div class="row g-4">
            <!-- Left Column -->
            <div class="col-lg-6">
                <div class="detail-item d-flex justify-content-between py-3 border-bottom">
                    <div class="fw-medium text-muted">Invoice Number</div>
                    <div class="fw-semibold">#@Model.InvoiceNumber</div>
                </div>

                <div class="detail-item d-flex justify-content-between py-3 border-bottom">
                    <div class="fw-medium text-muted">Student</div>
                    <div class="fw-semibold">@(Model.Registration?.FullName ?? "—")</div>
                </div>

                <div class="detail-item d-flex justify-content-between py-3 border-bottom">
                    <div class="fw-medium text-muted">Payment Provider</div>
                    <div class="fw-semibold">@(Model.Provider ?? "—")</div>
                </div>

                <div class="detail-item d-flex justify-content-between py-3 border-bottom">
                    <div class="fw-medium text-muted">Status</div>
                    <div>
                        @switch (Model.Status?.ToLower())
                        {
                            case "paid":
                                <span class="badge bg-success-subtle text-success px-3 py-2 fw-medium">Paid</span>
                                break;
                            case "pending":
                                <span class="badge bg-warning-subtle text-warning px-3 py-2 fw-medium">Pending</span>
                                break;
                            default:
                                <span class="badge bg-danger-subtle text-danger px-3 py-2 fw-medium">@(Model.Status ?? "Unknown")</span>
                                break;
                        }
                    </div>
                </div>

                <div class="detail-item d-flex justify-content-between py-3 border-bottom">
                    <div class="fw-medium text-muted">Amount</div>
                    <div class="fw-bold fs-5 text-primary">@Model.Amount.ToString("C0")</div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-lg-6">
                <div class="detail-item d-flex justify-content-between py-3 border-bottom">
                    <div class="fw-medium text-muted">Transaction ID</div>
                    <div class="fw-semibold text-muted">@(Model.TransactionId ?? "—")</div>
                </div>

                <div class="detail-item d-flex justify-content-between py-3 border-bottom">
                    <div class="fw-medium text-muted">Provider Session ID</div>
                    <div class="fw-semibold text-muted">@(Model.ProviderSessionId ?? "—")</div>
                </div>

                <div class="detail-item d-flex justify-content-between py-3 border-bottom">
                    <div class="fw-medium text-muted">Validation ID</div>
                    <div class="fw-semibold text-muted">@(Model.ValidationId ?? "—")</div>
                </div>

                <!--
                    DATE FIELD - Choose ONE of the following options depending on your model:
                    Replace the line below with the actual property name from your Payment class
                -->
                <div class="detail-item d-flex justify-content-between py-3 border-bottom">
                    <div class="fw-medium text-muted">Created / Payment Date</div>
                    <div class="fw-semibold">—</div>  <!-- ← Default safe display when no date property exists -->
                </div>

            </div>
        </div>

        <!-- Status Summary / Quick Info -->
        <div class="mt-5 pt-4 border-top text-center">
            <div class="d-inline-block p-4 rounded bg-light-subtle border">
                <h6 class="text-muted mb-1">Current Status</h6>
                @switch (Model.Status?.ToLower())
                {
                    case "paid":
                        <h4 class="fw-bold text-success mb-0"><i class="bi bi-check-circle-fill me-2"></i>Completed</h4>
                        break;
                    case "pending":
                        <h4 class="fw-bold text-warning mb-0"><i class="bi bi-hourglass-split me-2"></i>Awaiting Payment</h4>
                        break;
                    default:
                        <h4 class="fw-bold text-danger mb-0"><i class="bi bi-x-circle-fill me-2"></i>Issue Detected</h4>
                        break;
                }
            </div>
        </div>
    </div>
</div>

<style>
    .detail-item {
        font-size: 1.05rem;
    }

        .detail-item > div:first-child {
            min-width: 180px;
        }
    @@media (max-width: 992px) {
        .detail-item

    {
        flex-direction: column;
        gap: 0.35rem;
    }

    .detail-item > div:first-child {
        min-width: auto;
    }

    }
</style>