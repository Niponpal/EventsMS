<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventsMS</title>

    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <style>
        :root {
            --sidebar-width: 260px;
            --sidebar-collapsed-width: 72px;
            --primary: #3b82f6;
            --primary-dark: #2563eb;
            --sidebar-bg: #1e40af;
            --card-bg: #ffffff;
            --text-primary: #0f172a;
            --text-secondary: #64748b;
            --bg-body: #f8fafc;
            --shadow-sm: 0 4px 14px rgba(0,0,0,0.04);
            --shadow-md: 0 10px 25px rgba(0,0,0,0.06);
            --radius-lg: 1.25rem;
            --border: rgba(226,232,240,0.6);
        }

        [data-bs-theme="dark"] {
            --sidebar-bg: #0f172a;
            --card-bg: #1e293b;
            --text-primary: #e2e8f0;
            --text-secondary: #94a3b8;
            --bg-body: #0f172a;
            --shadow-sm: 0 4px 14px rgba(0,0,0,0.5);
            --shadow-md: 0 10px 25px rgba(0,0,0,0.6);
            --border: rgba(59,69,92,0.5);
        }

        body {
            background: var(--bg-body);
            color: var(--text-primary);
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, sans-serif;
            min-height: 100vh;
            transition: background 0.4s ease, color 0.4s ease;
        }

        /* ── SIDEBAR ── */
        .sidebar {
            position: fixed;
            inset: 0 auto 0 0;
            width: var(--sidebar-width);
            background: var(--sidebar-bg);
            color: white;
            transition: width 0.35s cubic-bezier(0.4, 0, 0.2, 1);
            z-index: 1050;
            overflow-y: auto;
            box-shadow: 6px 0 24px rgba(0,0,0,0.15);
        }

            .sidebar.collapsed {
                width: var(--sidebar-collapsed-width);
            }

        .sidebar-header {
            padding: 1.5rem 1.25rem;
            border-bottom: 1px solid rgba(255,255,255,0.15);
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: -0.02em;
        }

        .sidebar.collapsed .sidebar-header span {
            display: none;
        }

        .nav-link {
            color: rgba(255,255,255,0.92);
            padding: 0.8rem 1.25rem;
            display: flex;
            align-items: center;
            border-radius: 0.75rem;
            margin: 0.25rem 0.75rem;
            transition: all 0.2s ease;
        }

        .sidebar.collapsed .nav-link {
            justify-content: center;
            padding: 0.95rem 0.6rem;
        }

        .nav-link i {
            width: 28px;
            text-align: center;
            margin-right: 14px;
            font-size: 1.3rem;
        }

        .sidebar.collapsed .nav-link i {
            margin-right: 0;
            font-size: 1.45rem;
        }

        .sidebar.collapsed .nav-link span {
            display: none;
        }

        .nav-link:hover,
        .nav-link.active {
            background: rgba(255,255,255,0.18);
            color: white;
        }

        /* ── MAIN CONTENT ── */
        .main-content {
            margin-left: var(--sidebar-width);
            transition: margin-left 0.35s cubic-bezier(0.4, 0, 0.2, 1);
            padding: 2rem 2.4rem;
        }

        .sidebar.collapsed + .main-content {
            margin-left: var(--sidebar-collapsed-width);
        }

        /* ── TOP NAVBAR ── */
        .top-navbar {
            background: rgba(255,255,255,0.85);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid var(--border);
            border-radius: 1.5rem;
            padding: 0.7rem 1.5rem;
            margin-bottom: 2.5rem;
            box-shadow: var(--shadow-sm);
        }

        [data-bs-theme="dark"] .top-navbar {
            background: rgba(30,41,59,0.85);
            border-bottom: 1px solid #334155;
        }

        /* Media Queries */
        @@media (max-width: 992px) {
            .sidebar

        {
            transform: translateX(-100%);
        }

        .sidebar.show {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0 !important;
            padding: 1.4rem;
        }

        }


        /* ── FILTER ── */
        .filter-section {
            background: var(--card-bg);
            border-radius: var(--radius-lg);
            padding: 1rem 1.8rem;
            box-shadow: var(--shadow-sm);
            display: inline-flex;
            align-items: center;
            gap: 1.2rem;
            flex-wrap: wrap;
            margin-bottom: 2.5rem;
            border: 1px solid var(--border);
        }

        .filter-label {
            font-weight: 600;
            color: var(--text-primary);
        }

        .filter-select {
            border: none;
            background: rgba(241,245,249,0.8);
            padding: 0.6rem 2.4rem 0.6rem 1.2rem;
            border-radius: 3rem;
            font-weight: 500;
            color: var(--text-primary);
            min-width: 220px;
        }

        [data-bs-theme="dark"] .filter-select {
            background: #334155;
            color: #e2e8f0;
        }

        .btn-apply {
            background: var(--primary);
            border: none;
            padding: 0.6rem 2rem;
            border-radius: 3rem;
            font-weight: 600;
            color: white;
            transition: background 0.2s;
        }

            .btn-apply:hover {
                background: var(--primary-dark);
            }

        /* ── STAT CARDS ── */
        .stat-card {
            background: var(--card-bg);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-md);
            padding: 1.8rem 1.5rem;
            transition: all 0.3s ease;
            border: 1px solid var(--border);
        }

            .stat-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 25px 50px rgba(0,0,0,0.1);
            }

        [data-bs-theme="dark"] .stat-card:hover {
            box-shadow: 0 25px 50px rgba(0,0,0,0.4);
        }

        .stat-value {
            font-size: 2.8rem;
            font-weight: 800;
            line-height: 1;
        }

        .stat-label {
            color: var(--text-secondary);
            font-weight: 600;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .stat-icon {
            font-size: 2.8rem;
            opacity: 0.85;
        }

        /* ── CHART CARDS ── */
        .chart-card {
            background: var(--card-bg);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-md);
            padding: 1.8rem;
            border: 1px solid var(--border);
            height: 100%;
        }

        .chart-title {
            font-weight: 700;
            margin-bottom: 0.25rem;
        }

        /* ── TABLE ── */
        .recent-reg-table {
            background: var(--card-bg);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-md);
            overflow: hidden;
            border: 1px solid var(--border);
        }

        .table th {
            background: rgba(248,250,252,0.8);
            font-weight: 700;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--text-secondary);
            border-bottom: 2px solid var(--border);
        }

        [data-bs-theme="dark"] .table th {
            background: #111827;
            color: #94a3b8;
        }

        .table-hover tbody tr:hover {
            background: rgba(0,0,0,0.03);
        }

        [data-bs-theme="dark"] .table-hover tbody tr:hover {
            background: rgba(255,255,255,0.04);
        }

        /* ── DEPARTMENT BADGES ── */
        .dept-badge {
            background: #e0f2fe;
            color: #1e40af;
            padding: 0.5rem 1.2rem;
            border-radius: 3rem;
            font-size: 0.9rem;
            font-weight: 500;
            margin: 0.3rem;
            display: inline-block;
        }

        [data-bs-theme="dark"] .dept-badge {
            background: #1e40af22;
            color: #93c5fd;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header d-flex align-items-center justify-content-between">
            <span>EventsMS</span>
            <button class="btn btn-link text-white d-lg-none p-0" id="sidebarClose">
                <i class="bi bi-x-lg fs-3"></i>
            </button>
        </div>

        <nav class="mt-2 px-2">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-speedometer2"></i><span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Events" asp-action="Index">
                        <i class="bi bi-calendar-event"></i><span>Events</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Registrations" asp-action="Index">
                        <i class="bi bi-people"></i><span>Registrations</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Category" asp-action="Index">
                        <i class="bi bi-people"></i><span>Category</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Payments" asp-action="Index">
                        <i class="bi bi-credit-card"></i><span>Payments</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link dropdown-toggle" href="#"
                       data-bs-toggle="collapse" data-bs-target="#paymentsSubmenu"
                       aria-expanded="false" aria-controls="paymentsSubmenu">
                        <i class="bi bi-credit-card"></i><span>Payments</span>
                    </a>
                    <ul class="collapse nav flex-column ms-3" id="paymentsSubmenu">
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Payments" asp-action="Index">
                                <i class="bi bi-list-ul me-2"></i>Payments Overview
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="PaymentsHitory" asp-action="Index">
                                <i class="bi bi-clock-history me-2"></i>Payments History
                            </a>
                        </li>
                    </ul>
                </li>



                <li class="nav-item mt-auto pt-5">
                    <a class="nav-link text-danger" asp-area="" asp-controller="Account" asp-action="Logout">
                        <i class="bi bi-box-arrow-right"></i><span>Logout</span>
                    </a>
                </li>


            </ul>
        </nav>
    </div>

    <!-- Main Content Area -->
    <div class="main-content">

        <!-- Top Navbar -->
        <nav class="navbar top-navbar navbar-expand px-3 py-2 mb-5">
            <div class="container-fluid px-0">
                <button class="btn btn-link d-lg-none me-3 p-0" id="sidebarToggle">
                    <i class="bi bi-list fs-3"></i>
                </button>

                <!-- Sidebar Collapse Toggle (Desktop) -->
                <button class="btn btn-link text-primary d-none d-lg-block me-3 p-0" id="sidebarSizeToggle">
                    <i class="bi bi-layout-sidebar fs-3" id="sidebarSizeIcon"></i>
                </button>

                <span class="navbar-text fw-semibold d-none d-md-block">
                    <i class="bi bi-shield-check me-1"></i> @User.Identity?.Name
                </span>

                <div class="d-flex align-items-center ms-auto gap-3">
                    <button class="btn btn-light rounded-circle p-2 d-flex" id="themeToggle">
                        <i class="bi bi-moon-stars-fill fs-5" id="themeIcon"></i>
                    </button>

                    <div class="dropdown">
                        <a class="d-flex align-items-center text-decoration-none dropdown-toggle rounded-pill bg-white shadow-sm px-3 py-1"
                           href="#" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle fs-4 me-2"></i>
                            <span class="fw-medium d-none d-md-inline">@User.Identity?.Name</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow border-0 py-2">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profile</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <main role="main">
            @RenderBody()
        </main>

        <footer class="border-top text-muted mt-5 pt-4">
            <div class="container">
                © 2026 - EventsMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <script>
        // Sidebar mobile toggle
        const sidebar = document.getElementById('sidebar');
        document.getElementById('sidebarToggle')?.addEventListener('click', () => {
            sidebar.classList.toggle('show');
        });
        document.getElementById('sidebarClose')?.addEventListener('click', () => {
            sidebar.classList.remove('show');
        });

        // Sidebar collapse/expand (desktop)
        const sizeToggle = document.getElementById('sidebarSizeToggle');
        const sizeIcon = document.getElementById('sidebarSizeIcon');
        sizeToggle?.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            if (sidebar.classList.contains('collapsed')) {
                sizeIcon.className = 'bi bi-layout-sidebar-inset fs-3';
            } else {
                sizeIcon.className = 'bi bi-layout-sidebar fs-3';
            }
        });

        // Theme toggle
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');
        let currentTheme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');

        document.documentElement.setAttribute('data-bs-theme', currentTheme);
        themeIcon.className = currentTheme === 'dark' ? 'bi bi-sun-fill fs-5' : 'bi bi-moon-stars-fill fs-5';

        themeToggle?.addEventListener('click', () => {
            currentTheme = currentTheme === 'light' ? 'dark' : 'light';
            document.documentElement.setAttribute('data-bs-theme', currentTheme);
            localStorage.setItem('theme', currentTheme);
            themeIcon.className = currentTheme === 'dark' ? 'bi bi-sun-fill fs-5' : 'bi bi-moon-stars-fill fs-5';
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



