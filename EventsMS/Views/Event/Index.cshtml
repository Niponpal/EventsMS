@model IEnumerable<EventsMS.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<div class="container mt-4">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">All Events</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Event
        </a>
    </div>

    <!-- Events Grid -->
    <div class="row g-4">

        @foreach (var item in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0">

                    <!-- Event Image -->
                    <img src="@item.ImageUrl"
                         class="card-img-top"
                         style="height:200px; object-fit:cover;"
                         alt="@item.Name" />

                    <div class="card-body d-flex flex-column">

                        <!-- Event Name -->
                        <h5 class="card-title fw-bold">@item.Name</h5>

                        <!-- Category -->
                        <p class="text-muted mb-1">
                            <strong>Category:</strong> @item.Category?.Name
                        </p>

                        <!-- Dates -->
                        <p class="mb-1">
                            <small class="text-muted">
                                <i class="bi bi-calendar-event"></i>
                                @item.StartDate.ToString("dd MMM yyyy")
                                -
                                @item.EndDate.ToString("dd MMM yyyy")
                            </small>
                        </p>

                        <!-- Meals -->
                        <p class="mb-1">
                            <small class="text-muted">
                                Meals Offered: @item.MealsOffered
                            </small>
                        </p>

                        <!-- Fee Section -->
                        <div class="mb-2">
                            @if (item.IsFree)
                            {
                                <span class="badge bg-success">Free Event</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">
                                    Fee: @item.RegistrationFee ৳
                                </span>
                            }
                    </div>

                    <!-- Description Short -->
                    <p class="card-text text-muted small">
                        @(item.Description?.Length > 80
                                                ? item.Description.Substring(0, 80) + "..."
                                                : item.Description)
                    </p>

                        <!-- Buttons -->
                        <div class="mt-auto d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-primary">
                                Details
                            </a>

                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-warning">
                                Edit
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-danger">
                                Delete
                            </a>
                        </div>

                    </div>
                </div>
            </div>
                }

    </div>
</div>
