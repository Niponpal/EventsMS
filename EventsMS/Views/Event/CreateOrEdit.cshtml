@model EventsMS.Models.Event

@{
    ViewData["Title"] = Model.Id == 0 ? "Create Event" : "Edit Event";
}

<div class="container mt-4">

    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                @(Model.Id == 0 ? "Create New Event" : "Edit Event")
            </h4>
        </div>

        <div class="card-body">
            <form asp-action="@(Model.Id == 0 ? "Create" : "Edit")" method="post">

                <input type="hidden" asp-for="Id" />

                <div class="row">

                    <!-- Event Name -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter event name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Slug -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Slug" class="form-label fw-semibold"></label>
                        <input asp-for="Slug" class="form-control" placeholder="event-slug-url" />
                        <span asp-validation-for="Slug" class="text-danger"></span>
                    </div>

                    <!-- Image URL -->
                    <div class="col-md-12 mb-3">
                        <label asp-for="ImageUrl" class="form-label fw-semibold"></label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="Paste image URL here" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="col-md-12 mb-3">
                        <label asp-for="Description" class="form-label fw-semibold"></label>
                        <textarea asp-for="Description" rows="4" class="form-control" placeholder="Write event description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Start Date -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="StartDate" class="form-label fw-semibold"></label>
                        <input asp-for="StartDate" type="datetime-local" class="form-control"
                               value="@Model.StartDate.ToString("yyyy-MM-ddTHH:mm")" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <!-- End Date -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="EndDate" class="form-label fw-semibold"></label>
                        <input asp-for="EndDate" type="datetime-local" class="form-control"
                               value="@Model.EndDate.ToString("yyyy-MM-ddTHH:mm")" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>

                    <!-- Registration Fee -->
                    <div class="col-md-4 mb-3">
                        <label asp-for="RegistrationFee" class="form-label fw-semibold"></label>
                        <input asp-for="RegistrationFee" type="number" step="0.01"
                               class="form-control" placeholder="Enter fee amount" />
                        <span asp-validation-for="RegistrationFee" class="text-danger"></span>
                    </div>

                    <!-- Meals Offered -->
                    <div class="col-md-4 mb-3">
                        <label asp-for="MealsOffered" class="form-label fw-semibold"></label>
                        <input asp-for="MealsOffered" type="number"
                               class="form-control" placeholder="Number of meals" />
                        <span asp-validation-for="MealsOffered" class="text-danger"></span>
                    </div>

                    <!-- Category Dropdown -->
                    <div class="col-md-4 mb-3">
                        <label asp-for="CategoryId" class="form-label fw-semibold"></label>
                        <select asp-for="CategoryId"
                                asp-items="ViewBag.CategoryList"
                                class="form-select">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <!-- Is Free Switch -->
                    <div class="col-md-12 mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="IsFree" class="form-check-input" type="checkbox" />
                            <label asp-for="IsFree" class="form-check-label fw-semibold">
                                Is This a Free Event?
                            </label>
                        </div>
                    </div>

                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end mt-3">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        Cancel
                    </a>

                    <button type="submit" class="btn btn-primary px-4">
                        @(Model.Id == 0 ? "Save Event" : "Update Event")
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
