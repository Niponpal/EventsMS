@model IEnumerable<EventsMS.Models.Menu>

@{
    ViewData["Title"] = "Menu List";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Menu List</h4>
            <a asp-action="CreateOrEdit" class="btn btn-success btn-sm">
                + Create New Menu
            </a>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-hover table-striped">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>URL</th>
                        <th>Parent</th>
                        <th>Sort Order</th>
                        <th>Status</th>
                        <th width="180">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        int count = 1;
                    }

                    @foreach (var item in Model.OrderBy(x => x.SortOrder))
                    {
                        <tr>
                            <td>@count</td>
                            <td>@item.Title</td>
                            <td>@item.Url</td>
                            <td>@item.Parent?.Title</td>
                            <td>@item.SortOrder</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                <a asp-action="CreateOrEdit" asp-route-id="@item.Id"
                                   class="btn btn-primary btn-sm">
                                    Edit
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure to delete this menu?')">
                                    Delete
                                </a>
                            </td>
                        </tr>

                        count++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
