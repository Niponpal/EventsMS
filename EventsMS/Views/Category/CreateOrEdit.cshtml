@model EventsMS.Models.Category

@{
    ViewData["Title"] = Model?.Id > 0 ? "Edit Category" : "Create Category";
    string actionName = Model?.Id > 0 ? "Edit" : "Create";
    string submitButtonText = Model?.Id > 0 ? "Update Category" : "Create Category";
    string cardHeaderText = Model?.Id > 0 ? "Edit Category" : "New Category";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">

            <!-- Card with shadow and rounded corners -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <!-- Card Header -->
                <div class="card-header bg-gradient-primary text-white py-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h4 class="mb-1 fw-semibold">@cardHeaderText</h4>
                            <p class="mb-0 opacity-75">
                                @(Model?.Id > 0 ? "Update the details of this category" : "Add a new category for your events")
                            </p>
                        </div>
                        <i class="bi bi-tags-fill fs-1 opacity-75"></i>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body p-4 p-md-5">

                    <form asp-action="CreateOrEdit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <!-- Hidden ID for Edit -->
                        @if (Model?.Id > 0)
                        {
                            <input type="hidden" asp-for="Id" />
                        }

                        <!-- Name Field -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-medium required">
                                Category Name
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg"
                                   placeholder="e.g. Concert, Workshop, Conference..."
                                   autofocus />
                            <div class="invalid-feedback">
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>

                        <!-- Description Field -->
                        <div class="mb-5">
                            <label asp-for="Description" class="form-label fw-medium">
                                Description <small class="text-muted">(optional)</small>
                            </label>
                            <textarea asp-for="Description" class="form-control form-control-lg"
                                      rows="4"
                                      placeholder="Brief description of this category..."></textarea>
                            <div class="form-text text-muted mt-1">
                                Helps users understand what kind of events belong here.
                            </div>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex flex-wrap gap-3 justify-content-end mt-5 pt-4 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">
                                <i class="bi bi-arrow-left me-2"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
                                <i class="bi bi-save me-2"></i> @submitButtonText
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back link (small, subtle) -->
            <div class="text-center mt-4">
                <a asp-action="Index" class="text-muted text-decoration-none small">
                    <i class="bi bi-arrow-left-circle"></i> Back to Categories List
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}