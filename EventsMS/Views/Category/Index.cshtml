@model IEnumerable<EventsMS.Models.Category>

@{
    ViewData["Title"] = "Categories";
    var searchString = ViewBag.SearchString ?? "";
}

<div class="container py-4">
    <!-- Header + Search + Add Button -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5 gap-4">
        <div>
            <h1 class="fw-bold mb-1" style="color: var(--text-primary); font-size: 2.25rem; letter-spacing: -0.02em;">
                Event Categories
            </h1>
            <p class="mb-0" style="color: var(--text-secondary); font-size: 1.05rem;">
                Organize your events efficiently with custom categories
            </p>
        </div>

        <div class="d-flex flex-wrap gap-3 align-items-center">
            <!-- Search Form -->
            <form asp-action="Index" method="get" class="d-flex position-relative" style="max-width: 360px;">
                <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted fs-5"></i>
                <input type="search" name="searchString" value="@searchString"
                       class="form-control ps-5 rounded-pill border-0 shadow-sm py-2"
                       placeholder="Search by name or description..."
                       aria-label="Search categories" />
                @if (!string.IsNullOrEmpty(searchString))
                {
                    <button type="button" class="btn btn-link position-absolute top-50 end-0 translate-middle-y me-3 text-muted p-0"
                            onclick="window.location.href='@Url.Action("Index")'">
                        <i class="bi bi-x-lg fs-4"></i>
                    </button>
                }
            </form>

            <!-- Add New Button -->
            <a asp-action="CreateOrEdit" class="btn btn-primary btn-lg shadow-sm d-flex align-items-center gap-2 px-4"
               style="border-radius: 3rem; font-weight: 600; white-space: nowrap;">
                <i class="bi bi-plus-lg fs-4"></i> Add Category
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Table Card -->
        <div class="recent-reg-table mb-5">
            <div class="d-flex justify-content-between align-items-center px-4 pt-4 pb-3 flex-wrap gap-3">
                <h5 class="fw-semibold mb-0" style="color: var(--text-primary);">
                    <i class="bi bi-tags me-2 text-primary"></i> All Categories
                </h5>
                <small class="text-muted">
                    Total: <strong>@Model.Count()</strong>
                    @(string.IsNullOrEmpty(searchString) ? "" : $"matching “{searchString}”")
                </small>
            </div>

            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead>
                        <tr>
                            <th class="ps-4 py-3 fw-semibold text-uppercase" style="font-size: 0.85rem; letter-spacing: 0.05em;">Name</th>
                            <th class="py-3 fw-semibold text-uppercase" style="font-size: 0.85rem; letter-spacing: 0.05em;">Description</th>
                            <th class="py-3 text-end pe-4 fw-semibold text-uppercase" style="font-size: 0.85rem; letter-spacing: 0.05em;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-medium" style="color: var(--text-primary); font-size: 1rem;">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td style="color: var(--text-secondary); font-size: 0.95rem;">
                                    @if (!string.IsNullOrWhiteSpace(item.Description))
                                    {
                            @Html.Raw(item.Description.Length > 120
                                                        ? item.Description.Substring(0, 120) + "..."
                                                        : item.Description)
                                                        }
                                    else
                                    {
                                        <span class="fst-italic opacity-75">No description provided</span>
                                    }
                                </td>
                               
                                <td class="text-end pe-4">
                                    <div class="d-flex gap-2 justify-content-end flex-nowrap align-items-center">
                                        <a asp-action="CreateOrEdit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary btn-sm rounded-pill px-3 py-1"
                                           data-bs-toggle="tooltip" title="Edit Category">
                                            <i class="bi bi-pencil"></i>
                                            <span class="d-none d-md-inline">Edit</span>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info btn-sm rounded-pill px-3 py-1"
                                           data-bs-toggle="tooltip" title="View Details">
                                            <i class="bi bi-eye"></i>
                                            <span class="d-none d-md-inline">View</span>
                                        </a>
                                        <form method="post"
                                              asp-action="Delete"
                                              asp-route-id="@item.Id"
                                              class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this record?');">

                                            <button type="submit"
                                                    class="btn btn-outline-danger btn-sm rounded-pill px-3 py-1"
                                                    data-bs-toggle="tooltip"
                                                    title="Delete Category">
                                                <i class="bi bi-trash"></i>
                                                <span class="d-none d-md-inline">Delete</span>
                                            </button>

                                        </form>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="text-center py-5 my-5">
            <div class="mb-5">
                <i class="bi bi-tags-slash display-1" style="color: var(--text-secondary); opacity: 0.6;"></i>
            </div>
            <h3 class="mb-3 fw-semibold" style="color: var(--text-primary);">
                @(string.IsNullOrEmpty(searchString) ? "No Categories Yet" : "No Matching Categories")
            </h3>
            <p class="text-muted mb-4" style="max-width: 520px; margin: 0 auto; font-size: 1.1rem;">
                @if (string.IsNullOrEmpty(searchString))
                {
                    <text>Categories help you group and organize events more effectively.<br>Start by adding your first category now.</text>
                }
                else
                {
                    <text>No categories match “@searchString”.<br>Try a different search term or <a asp-action="Index">clear search</a>.</text>
                }
            </p>
            <a asp-action="CreateOrEdit" class="btn btn-primary btn-lg px-5 shadow-sm mt-3"
               style="border-radius: 3rem; font-weight: 600; font-size: 1.15rem;">
                <i class="bi bi-plus-lg me-2 fs-4"></i> Create Category
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Enable tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Auto-submit search on Enter
            const searchInput = document.querySelector('input[name="searchString"]');
            if (searchInput) {
                searchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        this.form.submit();
                    }
                });
            }

            // Optional: Clear search button behavior (already handled in HTML)
        });
    </script>
}