@model IEnumerable<EventsMS.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container py-5">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h1 class="fw-bold text-dark mb-1">Event Categories</h1>
            <p class="text-muted mb-0">Manage and explore all available categories for events</p>
        </div>

        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm d-flex align-items-center gap-2">
            <i class="bi bi-plus-lg"></i> Add New Category
        </a>
    </div>

    <!-- Categories Table / Cards -->
    @if (Model != null && Model.Any())
    {
        <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4 py-3">Name</th>
                                <th class="py-3">Description</th>
                                <th class="py-3 text-center">Events</th>
                                <th class="py-3 text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-medium">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td class="text-muted">
                                        @if (!string.IsNullOrWhiteSpace(item.Description))
                                        {
                                            @Html.DisplayFor(modelItem => item.Description)
                                        }
                                        else
                                        {
                                            <span class="text-black-50 fst-italic">No description</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary-subtle text-primary rounded-pill px-3 py-2 fs-6">
                                            @item.Events.Count
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex gap-2 justify-content-end">
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-outline-info btn-sm">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary / Stats -->
        <div class="mt-4 text-muted small">
            Showing <strong>@Model.Count()</strong> categories
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="text-center py-5 my-5">
            <div class="mb-4">
                <i class="bi bi-folder-x display-1 text-muted"></i>
            </div>
            <h4 class="text-muted mb-3">No categories found</h4>
            <p class="text-muted mb-4">Get started by creating your first event category.</p>
            <a asp-action="Create" class="btn btn-primary btn-lg px-5">
                <i class="bi bi-plus-lg me-2"></i> Create Category
            </a>
        </div>
    }
</div>

