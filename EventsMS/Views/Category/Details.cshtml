@model EventsMS.Models.Category

@{
    ViewData["Title"] = "Category Details - " + Model.Name;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">

            <!-- Header with navigation buttons -->
            <div class="d-flex justify-content-between align-items-center mb-5 flex-wrap gap-3">
                <div>
                    <h1 class="fw-bold text-dark mb-1">@Model.Name</h1>
                    <p class="text-muted mb-0">Category details</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left me-2"></i> Back to List
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary px-4">
                        <i class="bi bi-pencil me-2"></i> Edit
                    </a>
                </div>
            </div>

            <!-- Main Details Card -->
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">

                <!-- Card Header -->
                <div class="card-header bg-gradient text-white py-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h4 class="mb-1 fw-semibold">Category Information</h4>
                            <p class="mb-0 opacity-90">Basic details of this category</p>
                        </div>
                        <i class="bi bi-tags-fill fs-1 opacity-75"></i>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body p-5">
                    <div class="row g-5">

                        <!-- Name -->
                        <div class="col-12">
                            <h6 class="text-uppercase text-muted small fw-semibold mb-2">Category Name</h6>
                            <p class="fs-4 fw-medium mb-0">@Model.Name</p>
                        </div>

                        <!-- Description -->
                        <div class="col-12">
                            <h6 class="text-uppercase text-muted small fw-semibold mb-2">Description</h6>
                            @if (!string.IsNullOrWhiteSpace(Model.Description))
                            {
                                <p class="fs-5 text-dark mb-0" style="white-space: pre-wrap;">@Model.Description</p>
                            }
                            else
                            {
                                <p class="text-muted fst-italic mb-0">No description provided</p>
                            }
                        </div>

                    </div>
                </div>

                <!-- Footer with delete option -->
                <div class="card-footer bg-light border-0 p-4 d-flex justify-content-end">
                    <a asp-action="Delete" asp-route-id="@Model.Id"
                       class="btn btn-outline-danger px-5">
                        <i class="bi bi-trash3 me-2"></i> Delete Category
                    </a>
                </div>
            </div>

            <!-- Small back link -->
            <div class="text-center mt-4">
                <a asp-action="Index" class="text-muted text-decoration-none small">
                    ← Return to Categories
                </a>
            </div>

        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient {
            background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%) !important;
        }
    </style>
}