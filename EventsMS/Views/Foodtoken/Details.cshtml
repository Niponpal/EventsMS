@model EventsMS.Models.FoodToken

@{
    ViewData["Title"] = "Food Token Details";
    bool isUsed = Model.IsUsed;
}

<div class="container-fluid mt-4 px-lg-4">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden" style="background: var(--card-bg);">
        <!-- Header -->
        <div class="card-header d-flex justify-content-between align-items-center py-4 px-4 px-md-5 border-0"
             style="background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);">
            <div class="d-flex align-items-center">
                <i class="bi bi-ticket-perforated fs-3 me-3 text-white opacity-90"></i>
                <h4 class="mb-0 fw-semibold text-white">Food Token Details</h4>
            </div>
            <div>
                @if (isUsed)
                {
                    <span class="badge bg-success-subtle text-success px-4 py-2 fs-6 fw-medium rounded-pill">
                        <i class="bi bi-check2-circle me-1"></i> Used
                    </span>
                }
                else
                {
                    <span class="badge bg-warning-subtle text-warning px-4 py-2 fs-6 fw-medium rounded-pill">
                        <i class="bi bi-exclamation-circle me-1"></i> Unused
                    </span>
                }
            </div>
        </div>

        <div class="card-body p-4 p-md-5">
            <!-- Token Code – Hero Section -->
            <div class="text-center mb-5 pb-4 border-bottom">
                <div class="d-inline-block p-4 bg-light-subtle rounded-4 shadow-sm mb-3"
                     style="min-width: 260px; font-family: 'Segoe UI', monospace;">
                    <h1 class="fw-black text-primary mb-1" style="font-size: 3.2rem; letter-spacing: 2px;">
                        @Model.TokenCode
                    </h1>
                </div>
                <p class="text-muted small mb-0">Token Code • Tap to copy (coming soon)</p>
            </div>

            <div class="row g-4">
                <!-- Student Information -->
                <div class="col-lg-6">
                    <div class="info-section border rounded-3 p-4 h-100 bg-light-subtle">
                        <h5 class="fw-semibold text-primary mb-3 pb-2 border-bottom">
                            <i class="bi bi-person me-2"></i> Student Information
                        </h5>
                        <dl class="row g-3 mb-0">
                            <dt class="col-sm-4 fw-medium text-secondary">Full Name</dt>
                            <dd class="col-sm-8 fw-semibold">@Model.Registration?.FullName</dd>

                            <dt class="col-sm-4 fw-medium text-secondary">Email</dt>
                            <dd class="col-sm-8">@Model.Registration?.Email</dd>

                            <dt class="col-sm-4 fw-medium text-secondary">Phone</dt>
                            <dd class="col-sm-8">@Model.Registration?.PhoneNumber</dd>

                            <dt class="col-sm-4 fw-medium text-secondary">Department</dt>
                            <dd class="col-sm-8">@Model.Registration?.Department</dd>

                            <dt class="col-sm-4 fw-medium text-secondary">ID Card No.</dt>
                            <dd class="col-sm-8 fw-semibold">@Model.Registration?.IdCardNumber</dd>
                        </dl>
                    </div>
                </div>

                <!-- Event Information -->
                <div class="col-lg-6">
                    <div class="info-section border rounded-3 p-4 h-100 bg-light-subtle">
                        <h5 class="fw-semibold text-primary mb-3 pb-2 border-bottom">
                            <i class="bi bi-calendar-event me-2"></i> Event Information
                        </h5>
                        <dl class="row g-3 mb-0">
                            <dt class="col-sm-4 fw-medium text-secondary">Event Name</dt>
                            <dd class="col-sm-8 fw-semibold">@Model.Registration?.Event?.Name</dd>

                            <dt class="col-sm-4 fw-medium text-secondary">Start</dt>
                            <dd class="col-sm-8">@Model.Registration?.Event?.StartDate.ToString("dd MMM yyyy • hh:mm tt")</dd>

                            <dt class="col-sm-4 fw-medium text-secondary">End</dt>
                            <dd class="col-sm-8">@Model.Registration?.Event?.EndDate.ToString("dd MMM yyyy • hh:mm tt")</dd>

                            <dt class="col-sm-4 fw-medium text-secondary">Meals Offered</dt>
                            <dd class="col-sm-8">@Model.Registration?.Event?.MealsOffered</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Token Metadata -->
            <div class="mt-4 pt-4 border-top">
                <div class="info-section border rounded-3 p-4 bg-light-subtle">
                    <h5 class="fw-semibold text-primary mb-3 pb-2 border-bottom">
                        <i class="bi bi-info-circle me-2"></i> Token Information
                    </h5>
                    <dl class="row g-3 mb-0">
                        <dt class="col-sm-4 fw-medium text-secondary">Issued On</dt>
                        <dd class="col-sm-8">@Model.IssuedUtc.ToString("dd MMM yyyy • hh:mm tt") (UTC)</dd>

                        <dt class="col-sm-4 fw-medium text-secondary">Current Status</dt>
                        <dd class="col-sm-8">
                            @if (isUsed)
                            {
                                <span class="badge bg-success px-3 py-2 fs-6">Already Used</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark px-3 py-2 fs-6">Not Used Yet</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Actions -->
            <div class="d-flex flex-column flex-sm-row justify-content-end gap-3 mt-5 pt-4 border-top">
                <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill fw-medium">
                    <i class="bi bi-arrow-left-short me-2"></i> Back to List
                </a>

                @if (!isUsed)
                {
                    <a asp-action="MarkUsed" asp-route-id="@Model.Id"
                       class="btn btn-success px-5 py-2 rounded-pill fw-semibold shadow-sm">
                        <i class="bi bi-check2-circle me-2"></i> Mark as Used
                    </a>
                }

                <a asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-outline-danger px-4 py-2 rounded-pill fw-medium"
                   onclick="return confirm('Are you sure you want to delete this token? This action cannot be undone.');">
                    <i class="bi bi-trash3 me-2"></i> Delete Token
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .info-section {
            transition: all 0.2s ease;
        }

            .info-section:hover {
                box-shadow: 0 8px 24px rgba(0,0,0,0.08);
                transform: translateY(-2px);
            }

        dt {
            color: var(--text-secondary);
        }

        dd {
            color: var(--text-primary);
            margin-bottom: 0;
        }

        .bg-light-subtle {
            background-color: rgba(241,245,249,0.6) !important;
        }

        [data-bs-theme="dark"] .bg-light-subtle {
            background-color: rgba(30,41,59,0.4) !important;
        }

        .btn.rounded-pill:hover {
            transform: translateY(-2px);
        }

        .btn-success.rounded-pill {
            background: linear-gradient(90deg, #10b981, #059669);
            border: none;
        }
    </style>
}