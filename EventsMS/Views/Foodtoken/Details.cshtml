@model EventsMS.Models.FoodToken

@{
    ViewData["Title"] = "Food Token Details";
}

<div class="container mt-4">

    <div class="card shadow border-0">

        <!-- Header -->
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Food Token Details</h4>

            @if (Model.IsUsed)
            {
                <span class="badge bg-success fs-6 px-3 py-2">
                    Used
                </span>
            }
            else
            {
                <span class="badge bg-warning text-dark fs-6 px-3 py-2">
                    Unused
                </span>
            }
        </div>

        <div class="card-body">

            <!-- Token Code Highlight -->
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">@Model.TokenCode</h2>
                <p class="text-muted">Token Code</p>
            </div>

            <div class="row">

                <!-- Student Information -->
                <div class="col-md-6 mb-4">
                    <div class="border rounded p-3 h-100 bg-light">
                        <h5 class="fw-bold border-bottom pb-2 mb-3">
                            Student Information
                        </h5>

                        <p><strong>Name:</strong> @Model.Registration?.FullName</p>
                        <p><strong>Email:</strong> @Model.Registration?.Email</p>
                        <p><strong>Phone:</strong> @Model.Registration?.PhoneNumber</p>
                        <p><strong>Department:</strong> @Model.Registration?.Department</p>
                        <p><strong>ID Card:</strong> @Model.Registration?.IdCardNumber</p>
                    </div>
                </div>

                <!-- Event Information -->
                <div class="col-md-6 mb-4">
                    <div class="border rounded p-3 h-100 bg-light">
                        <h5 class="fw-bold border-bottom pb-2 mb-3">
                            Event Information
                        </h5>

                        <p><strong>Event Name:</strong> @Model.Registration?.Event?.Name</p>
                        <p>
                            <strong>Start Date:</strong>
                            @Model.Registration?.Event?.StartDate.ToString("dd MMM yyyy hh:mm tt")
                        </p>
                        <p>
                            <strong>End Date:</strong>
                            @Model.Registration?.Event?.EndDate.ToString("dd MMM yyyy hh:mm tt")
                        </p>
                        <p>
                            <strong>Meals Offered:</strong>
                            @Model.Registration?.Event?.MealsOffered
                        </p>
                    </div>
                </div>

            </div>

            <!-- Issued Info -->
            <div class="border rounded p-3 bg-light mb-4">
                <h5 class="fw-bold border-bottom pb-2 mb-3">
                    Token Information
                </h5>

                <p>
                    <strong>Issued Date:</strong>
                    @Model.IssuedUtc.ToString("dd MMM yyyy hh:mm tt")
                </p>

                <p>
                    <strong>Status:</strong>
                    @if (Model.IsUsed)
                    {
                        <span class="badge bg-success">Already Used</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Not Used Yet</span>
                    }
                </p>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-end">

                <a asp-action="Index" class="btn btn-secondary me-2">
                    Back
                </a>

                @if (!Model.IsUsed)
                {
                    <a asp-action="MarkUsed"
                       asp-route-id="@Model.Id"
                       class="btn btn-success me-2">
                        Mark as Used
                    </a>
                }

                <a asp-action="Delete"
                   asp-route-id="@Model.Id"
                   class="btn btn-danger">
                    Delete
                </a>

            </div>

        </div>

    </div>

</div>
