@model IEnumerable<EventsMS.Models.FoodToken>

@{
    ViewData["Title"] = "Food Tokens";
}

<div class="container mt-4">

    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-primary">Food Token List</h3>

        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Generate Token
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-hover align-middle">

                    <thead class="table-light">
                        <tr>
                            <th>Token Code</th>
                            <th>Student</th>
                            <th>Event</th>
                            <th>Issued Date</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <!-- Token Code -->
                                <td>
                                    <span class="fw-bold text-dark">
                                        @item.TokenCode
                                    </span>
                                </td>

                                <!-- Student -->
                                <td>
                                    @item.Registration.FullName

                                <!-- Event -->
                                <td>
                                    @item.Registration?.Event?.Name
                                </td>

                                <!-- Issued Date -->
                                <td>
                                    @item.IssuedUtc.ToString("dd MMM yyyy hh:mm tt")
                                </td>

                                <!-- Status -->
                                <td>
                                    @if (item.IsUsed)
                                    {
                                        <span class="badge bg-success">
                                            Used
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            Unused
                                        </span>
                                    }
                                </td>

                                <!-- Actions -->
                                <td class="text-end">

                                    <a asp-action="Details"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        Details
                                    </a>

                                    @if (!item.IsUsed)
                                    {
                                        <a asp-action="MarkUsed"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-success">
                                            Mark Used
                                        </a>
                                    }

                                    <a asp-action="Delete"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger">
                                        Delete
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>
    </div>
</div>
