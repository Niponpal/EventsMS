@model EventsMS.Models.FoodToken

@{
    ViewData["Title"] = Model.Id == 0 ? "Generate Food Token" : "Edit Food Token";
    bool isCreate = Model.Id == 0;
}

<div class="container-fluid mt-4 px-lg-4">
    <!-- Card with modern styling -->
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden" style="background: var(--card-bg);">
        <!-- Header -->
        <div class="card-header bg-gradient-primary text-white py-4 border-0 d-flex align-items-center">
            <div class="d-flex align-items-center">
                <i class="bi bi-ticket-perforated fs-3 me-3"></i>
                <h4 class="mb-0 fw-semibold">
                    @(isCreate ? "Generate New Food Token" : "Edit Food Token")
                </h4>
            </div>
        </div>

        <div class="card-body p-4 p-md-5">
            <form asp-action="@(isCreate ? "Create" : "Edit")" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row g-4">
                    <!-- Registration Dropdown -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="RegistrationId"
                                    asp-items="ViewBag.RegistrationList"
                                    class="form-select border-primary-subtle shadow-sm"
                                    id="RegistrationId"
                                    required>
                                <option value="">-- Choose Student / Registration --</option>
                            </select>
                            <label asp-for="RegistrationId" class="fw-medium text-primary">
                                Select Registration / Student
                            </label>
                            <div class="invalid-feedback">
                                Please select a valid registration.
                            </div>
                            <span asp-validation-for="RegistrationId" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <!-- Token Code (readonly) -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="TokenCode"
                                   class="form-control bg-light-subtle border-primary-subtle shadow-sm"
                                   readonly
                                   placeholder="Auto-generated token" />
                            <label asp-for="TokenCode" class="fw-medium text-primary">
                                Token Code
                            </label>
                            <small class="text-muted d-block mt-1">
                                Automatically generated on save
                            </small>
                        </div>
                    </div>

                    <!-- Issued Date -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="IssuedUtc"
                                   type="datetime-local"
                                   class="form-control border-primary-subtle shadow-sm"
                                   value="@(Model.IssuedUtc != default ? Model.IssuedUtc.ToString("yyyy-MM-ddTHH:mm") : DateTime.UtcNow.ToString("yyyy-MM-ddTHH:mm"))" />
                            <label asp-for="IssuedUtc" class="fw-medium text-primary">
                                Issued Date & Time (UTC)
                            </label>
                            <span asp-validation-for="IssuedUtc" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <!-- Is Used Toggle -->
                    <div class="col-md-6 d-flex align-items-center">
                        <div class="form-check form-switch form-switch-lg mt-3">
                            <input asp-for="IsUsed"
                                   class="form-check-input"
                                   type="checkbox"
                                   role="switch"
                                   id="IsUsedSwitch" />
                            <label class="form-check-label fw-semibold text-primary ms-2" for="IsUsedSwitch">
                                Mark as Used
                            </label>
                        </div>
                        <small class="text-muted ms-3 mt-3">
                            @(Model.IsUsed ? "(Already used)" : "Available for use")
                        </small>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="d-flex flex-column flex-sm-row justify-content-end gap-3 mt-5 pt-4 border-top">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill fw-medium">
                        <i class="bi bi-arrow-left me-2"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary px-5 py-2 rounded-pill fw-semibold shadow-sm">
                        <i class="bi bi-@(isCreate ? "plus-lg" : "floppy") me-2"></i>
                        @(isCreate ? "Generate Token" : "Update Token")
                    </button>
                </div>
            </form>
        </div>

        <!-- Optional footer note -->
        <div class="card-footer bg-transparent border-0 text-center text-muted small py-3">
            All times are in UTC • Token will be unique and non-editable after creation
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        }

        .form-floating > label {
            color: var(--text-secondary) !important;
        }

        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label {
            color: var(--primary) !important;
        }

        .form-switch.form-switch-lg .form-check-input {
            width: 3.2rem;
            height: 1.7rem;
        }

            .form-switch.form-switch-lg .form-check-input:checked {
                background-color: var(--primary);
                border-color: var(--primary);
            }

        .btn-primary.rounded-pill:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(59, 130, 246, 0.25);
        }

        [data-bs-theme="dark"] .bg-light-subtle {
            background-color: #2d3748 !important;
        }

        [data-bs-theme="dark"] .text-primary {
            color: #93c5fd !important;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}