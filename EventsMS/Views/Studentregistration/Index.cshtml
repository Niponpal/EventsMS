@model IEnumerable<EventsMS.Models.StudentRegistration>

@{
    ViewData["Title"] = "Student Registration List";
}

<div class="container-fluid px-0">
    <!-- Header / Title Card -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold mb-0">
            <i class="bi bi-people me-2 text-primary"></i>
            Student Registrations
        </h4>
        <a asp-action="CreateOrEdit" class="btn btn-primary rounded-pill px-4">
            <i class="bi bi-plus-lg me-1"></i> Add New Registration
        </a>
    </div>

    <!-- Main Card -->
    <div class="card recent-reg-table shadow-md border-0" style="border-radius: var(--radius-lg); overflow: hidden;">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3 px-4">
            <h5 class="mb-0 fw-semibold">All Registrations</h5>
            <small class="opacity-75">@Model.Count() records</small>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead>
                        <tr>
                            <th class="ps-4">Photo</th>
                            <th>Full Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Event</th>
                            <th class="text-center">Payment</th>
                            <th class="text-center" style="width: 220px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-3 opacity-50"></i>
                                    No registrations found
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        @if (!string.IsNullOrWhiteSpace(item.PhotoPath))
                                        {
                                            <img src="~/@item.PhotoPath"
                                                 alt="@item.FullName"
                                                 width="48" height="48"
                                                 class="rounded-circle border shadow-sm object-fit-cover" />
                                        }
                                        else
                                        {
                                            <div class="avatar-placeholder rounded-circle bg-light d-flex align-items-center justify-content-center"
                                                 style="width:48px; height:48px; font-size:1.1rem;">
                                                <i class="bi bi-person"></i>
                                            </div>
                                        }
                                    </td>
                                    <td class="fw-medium">@item.FullName</td>
                                    <td>@item.PhoneNumber</td>
                                    <td class="text-muted">@item.Email</td>
                                    <td>
                                        <span class="dept-badge">@item.Department</span>
                                    </td>
                                    <td class="text-muted">
                                        @(item.Event?.Description ?? "<em>No event</em>")
                                    </td>
                                    <td class="text-center">
                                        @switch (item.PaymentStatus)
                                        {
                                            case "Completed":
                                                <span class="badge bg-success-subtle text-success px-3 py-2">Completed</span>
                                                break;
                                            case "Failed":
                                                <span class="badge bg-danger-subtle text-danger px-3 py-2">Failed</span>
                                                break;
                                            default:
                                                <span class="badge bg-warning-subtle text-warning px-3 py-2">Pending</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex gap-2 justify-content-center flex-wrap">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                                <i class="bi bi-eye me-1"></i> View
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-warning rounded-pill px-3">
                                                <i class="bi bi-pencil me-1"></i> Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-danger rounded-pill px-3"
                                               onclick="return confirm('Are you sure you want to delete this registration?');">
                                                <i class="bi bi-trash me-1"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Optional footer with pagination hint -->
        <div class="card-footer bg-light text-muted small py-3 px-4">
            Showing all @Model.Count() registration@(Model.Count() == 1 ? "" : "s")
        </div>
    </div>
</div>

<style>
    /* Quick inline fixes to match dashboard look */
    .recent-reg-table thead th {
        background: rgba(248,250,252,0.9);
        color: var(--text-secondary);
        font-weight: 700;
        font-size: 0.82rem;
        text-transform: uppercase;
        letter-spacing: 0.4px;
        border-bottom: 2px solid var(--border);
        white-space: nowrap;
    }

    [data-bs-theme="dark"] .recent-reg-table thead th {
        background: #111827;
        color: #94a3b8;
    }

    .table-hover tbody tr:hover {
        background: rgba(0,0,0,0.025);
    }

    [data-bs-theme="dark"] .table-hover tbody tr:hover {
        background: rgba(255,255,255,0.03);
    }

    .avatar-placeholder {
        background: #e2e8f0;
        color: #64748b;
        font-weight: 600;
    }

    [data-bs-theme="dark"] .avatar-placeholder {
        background: #334155;
        color: #94a3b8;
    }

    .badge {
        font-weight: 600;
        padding: 0.45em 1em;
    }
</style>