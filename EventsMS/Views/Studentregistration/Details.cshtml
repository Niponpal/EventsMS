@model EventsMS.Models.StudentRegistration

@{
    ViewData["Title"] = "Registration Details";
}

<div class="container-fluid px-0">
    <!-- Header with back & actions -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h4 class="fw-bold mb-0">
            <i class="bi bi-person-check me-2 text-primary"></i>
            Registration Details
        </h4>

        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-warning rounded-pill px-4">
                <i class="bi bi-pencil me-1"></i> Edit
            </a>
        </div>
    </div>

    <!-- Main Details Card -->
    <div class="card shadow-md border-0" style="border-radius: var(--radius-lg); overflow: hidden;">
        <div class="card-header bg-primary text-white py-3 px-4 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold">
                Participant: <span class="opacity-90">@Model.FullName</span>
            </h5>
            <small class="opacity-75">ID: @Model.IdCardNumber</small>
        </div>

        <div class="card-body p-4">
            <div class="row g-4">
                <!-- Photo Column -->
                <div class="col-md-4 col-lg-3 text-center text-md-start">
                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model.PhotoPath))
                        {
                            <img src="~/@Model.PhotoPath"
                                 alt="@Model.FullName"
                                 class="img-fluid rounded shadow border"
                                 style="max-height: 280px; object-fit: cover; width: 100%;" />
                        }
                        else
                        {
                            <div class="bg-light rounded shadow d-flex align-items-center justify-content-center text-muted"
                                 style="height: 280px; font-size: 4rem;">
                                <i class="bi bi-person"></i>
                            </div>
                        }
                    </div>

                    <div class="text-center mt-3">
                        <span class="dept-badge d-inline-block px-4 py-2">
                            @Model.Department
                        </span>
                    </div>
                </div>

                <!-- Information Column -->
                <div class="col-md-8 col-lg-9">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label class="form-label fw-semibold text-muted small mb-1">Full Name</label>
                            <div class="fw-medium">@Model.FullName</div>
                        </div>

                        <div class="col-sm-6">
                            <label class="form-label fw-semibold text-muted small mb-1">Phone Number</label>
                            <div class="fw-medium">@Model.PhoneNumber</div>
                        </div>

                        <div class="col-sm-6">
                            <label class="form-label fw-semibold text-muted small mb-1">Email Address</label>
                            <div class="fw-medium text-break">@Model.Email</div>
                        </div>

                        <div class="col-sm-6">
                            <label class="form-label fw-semibold text-muted small mb-1">ID Card / Student ID</label>
                            <div class="fw-medium">@Model.IdCardNumber</div>
                        </div>

                        <div class="col-sm-6">
                            <label class="form-label fw-semibold text-muted small mb-1">Department</label>
                            <div class="fw-medium">@Model.Department</div>
                        </div>

                        <div class="col-sm-6">
                            <label class="form-label fw-semibold text-muted small mb-1">Event</label>
                            <div class="fw-medium">@(Model.Event?.Description ?? "<span class='text-muted'>Not assigned</span>")</div>
                        </div>

                        <div class="col-12 mt-3">
                            <label class="form-label fw-semibold text-muted small mb-1">Payment Status</label>
                            <div>
                                @switch (Model.PaymentStatus)
                                {
                                    case "Completed":
                                        <span class="badge bg-success-subtle text-success px-4 py-2 fs-6">Completed</span>
                                        break;
                                    case "Failed":
                                        <span class="badge bg-danger-subtle text-danger px-4 py-2 fs-6">Failed</span>
                                        break;
                                    default:
                                        <span class="badge bg-warning-subtle text-warning px-4 py-2 fs-6">Pending</span>
                                        break;
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Optional footer with metadata -->
        <div class="card-footer bg-light text-muted small py-3 px-4">
            <div class="d-flex justify-content-between flex-wrap gap-2">
                <span>Registration ID: <strong>@Model.Id</strong></span>
                @if (Model.Event != null)
                {
                    <span>Event ID: <strong>@Model.EventId</strong></span>
                }
            </div>
        </div>
    </div>
</div>

<style>
    /* Minor tweaks to match dashboard consistency */
    .card-header {
        background: var(--primary) !important;
    }

    .dept-badge {
        background: #e0f2fe;
        color: #1e40af;
        font-weight: 600;
        font-size: 0.95rem;
    }

    [data-bs-theme="dark"] .dept-badge {
        background: #1e40af44;
        color: #93c5fd;
    }

    .bg-light.shadow {
        background: rgba(248,250,252,0.8) !important;
    }

    [data-bs-theme="dark"] .bg-light.shadow {
        background: #334155 !important;
    }
</style>