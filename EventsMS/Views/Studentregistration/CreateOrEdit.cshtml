@model EventsMS.Models.StudentRegistration

@{
    ViewData["Title"] = Model.Id == 0 ? "Create Registration" : "Edit Registration";
}

<div class="container-fluid px-0">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold mb-0">
            <i class="bi bi-person-plus me-2 text-primary"></i>
            @(Model.Id == 0 ? "New Student Registration" : "Edit Registration")
        </h4>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <!-- Main Form Card -->
    <div class="card shadow-md border-0" style="border-radius: var(--radius-lg); overflow: hidden;">
        <div class="card-header bg-primary text-white py-3 px-4">
            <h5 class="mb-0 fw-semibold">
                @(Model.Id == 0 ? "Register New Participant" : "Update Participant Details")
            </h5>
        </div>

        <div class="card-body p-4">
            <form asp-action="CreateOrEdit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="row g-4">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold">Full Name</label>
                            <input asp-for="FullName" class="form-control shadow-sm" placeholder="Enter full name" />
                            <span asp-validation-for="FullName" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control shadow-sm" placeholder="01XXXXXXXXX" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">Email Address</label>
                            <input asp-for="Email" class="form-control shadow-sm" placeholder="example@domain.com" />
                            <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdCardNumber" class="form-label fw-semibold">ID Card / Student ID</label>
                            <input asp-for="IdCardNumber" class="form-control shadow-sm" placeholder="Enter ID number" />
                            <span asp-validation-for="IdCardNumber" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Department" class="form-label fw-semibold">Department</label>
                            <input asp-for="Department" class="form-control shadow-sm" placeholder="e.g. CSE, EEE, BBA" />
                            <span asp-validation-for="Department" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EventId" class="form-label fw-semibold">Event</label>
                            <div class="input-group shadow-sm">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-calendar-event text-primary"></i>
                                </span>
                                <select asp-for="EventId" class="form-select" asp-items="@ViewBag.EventId" required>
                                    <option value="">-- Select Event --</option>
                                </select>
                            </div>
                            <span asp-validation-for="EventId" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PaymentStatus" class="form-label fw-semibold">Payment Status</label>
                            <select asp-for="PaymentStatus" class="form-select shadow-sm">
                                <option value="Pending">Pending</option>
                                <option value="Completed">Completed</option>
                                <option value="Failed">Failed</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Profile Photo</label>
                            <input type="file" name="PhotoFile" class="form-control shadow-sm" accept="image/*" />

                            @if (!string.IsNullOrEmpty(Model.PhotoPath))
                            {
                                <div class="mt-3">
                                    <small class="text-muted d-block mb-2">Current Photo:</small>
                                    <img src="~/@Model.PhotoPath"
                                         alt="Current profile"
                                         class="rounded shadow-sm border"
                                         style="max-width: 140px; height: auto; object-fit: cover;" />
                                </div>
                            }
                            else
                            {
                                <small class="text-muted mt-2 d-block">No photo uploaded yet</small>
                            }
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="mt-5 pt-3 border-top d-flex justify-content-end gap-3">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary px-5 rounded-pill fw-semibold">
                        <i class="bi bi-check-lg me-2"></i>
                        @(Model.Id == 0 ? "Create Registration" : "Update Registration")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Optional: Simple client-side photo preview
        document.querySelector('input[type="file"][name="PhotoFile"]')?.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(ev) {
                    const preview = document.createElement('img');
                    preview.src = ev.target.result;
                    preview.className = 'rounded shadow-sm border mt-3';
                    preview.style.maxWidth = '140px';
                    preview.style.height = 'auto';
                    preview.style.objectFit = 'cover';

                    const container = e.target.parentElement;
                    const oldPreview = container.querySelector('img:not([src~="@Model.PhotoPath"])');
                    if (oldPreview) oldPreview.remove();
                    container.appendChild(preview);
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}